<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuários</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Contato/Objetivo</a>
                        </li>                        
                    </ul>
                </div>
            </div>
        </nav>
        <div id="NotificacaoDiv" style="float:right; display:flex;display:none"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - UserList - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
<script>
    function Notify(tipo, mensagem) {
        let title = "";
        let fechaDiv = '<a href="#" class="close" data-dismiss="alert" aria-hidden="true">×</a><p>';

        if (tipo == 'sucesso') {
            title = '<strong>Sucesso! </strong>';
            $('#NotificacaoDiv').addClass('alert alert-success');
        }
        else if (tipo == 'alerta') {
            title = '<strong>Atencao! </strong>';
            $('#NotificacaoDiv').addClass('alert alert-warning');
        }
        else if (tipo == 'erro') {
            title = '<strong>Erro! </strong>';
            $('#NotificacaoDiv').addClass('alert alert-danger');
        }

        $('#NotificacaoDiv').show();
        $("#NotificacaoDiv").html(fechaDiv + title + mensagem);
        setTimeout(function () { $('#NotificacaoDiv').hide() }, 5000);
    }
</script>
</body>
</html>
